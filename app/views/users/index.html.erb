<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="2"></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Show', user, class:"btn btn-primary" %></td>
        <td>
          <% if user.inactive? and current_user and current_user.admin? %>
            <span class="label label-info">inactive</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
