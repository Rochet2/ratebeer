<p id="notice"><%= notice %></p>

<h2>
  <%= "#{@beer_club.name} #{@beer_club.city}" %>
</h2>

<p>
  Founded <%= @beer_club.founded %>
</p>

<% if @beer_club.members.any? %>

  <h3>Members</h3>

  <ul>
    <% @beer_club.members.each do |member| %>
      <li>
      <%= link_to member.username, member %>
      </li>
    <% end %>
  </ul>

<% else %>

  <p>
    no members
  </p>

<% end %>

<% if @new_membership %>
  <%= form_for(@new_membership) do |f| %>
     <%= f.hidden_field :beer_club_id %>
     <%= f.submit value:"join the club", class:"btn btn-primary" %>
  <% end %>
<% end %>

<% if @current_membership %>
  <%= form_for(@current_membership, method: "delete") do |f| %>
     <%= f.hidden_field :beer_club_id %>
     <%= f.submit value: "end the membership", class:"btn btn-danger" %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_beer_club_path(@beer_club), class:"btn btn-primary" %> |
<%= link_to 'Back', beer_clubs_path, class:"btn btn-primary" %>
