<h2>List of ratings</h2>
<p>Number of ratings: <%= @ratings.count %>
<ul>
  <% @ratings.each do |rating| %>
    <li> <%= rating %> <%= link_to rating.user.username, rating.user %> </li>
  <% end %>
</ul>

<% if current_user %>
  <%= link_to "reittaa", new_rating_path, class:"btn btn-primary" %>
<% end %>
